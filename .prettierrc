{
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "*.scss",
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"plugins": ["prettier-plugin-svelte"],
	"printWidth": 100,
	"proseWrap": "never",
	"singleQuote": true,
	"trailingComma": "none",
	"useTabs": true,
	"vueIndentScriptAndStyle": true
}
