<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="{{ rootPath }}styles/main.css{{ version }}">

		{{ head }}
	</head>

	<body>
		{{ html }}

		{% if pageData %}
			<script>
				window.pageData = {{ pageData }};
			</script>
		{% endif %}

		<script src="{{ rootPath }}scripts/main.js{{ version }}"></script>
		{% if devMode %}
			<script src="{{ rootPath }}scripts/dev.js"></script>
		{% endif %}
	</body>
</html>
