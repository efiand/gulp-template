{% from 'utils/setBg.twig' import setBg %}

<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{{ project }}
		</title>
		<meta name="description" content="{{ description|punctify }}">
		<link rel="stylesheet" href="{{ rootPath }}styles/main.css{{ version }}">

		{% for font in ['opensans-normal-400', 'opensans-normal-700'] %}
			<link rel="preload" href="{{ rootPath }}fonts/{{ font }}.woff2" as="font" crossorigin="anonymous">
		{% endfor %}

		{# https://realfavicongenerator.net/ #}
		<link rel="apple-touch-icon" sizes="180x180" href="{{ rootPath }}apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="{{ rootPath }}favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="{{ rootPath }}favicon-16x16.png">
		<link rel="manifest" href="{{ rootPath }}site.webmanifest">
		<link rel="mask-icon" href="{{ rootPath }}safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#63d1bb">
		<meta name="theme-color" content="#ffffff">
	</head>

	<body>
		{% block page %}{% endblock %}

		{% block modals %}{% endblock %}

		<script>
			window.pageData = {{ pageData }};
		</script>

		<script src="{{ rootPath }}scripts/main.js{{ version }}"></script>
		{% if devMode %}
			<script src="{{ rootPath }}scripts/dev.js{{ version }}"></script>
		{% endif %}
	</body>
</html>
