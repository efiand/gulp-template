<picture class="Picture {{ bemMix }}">
	{% if not devMode %}
		{% if webpDesktop %}
			<source
				type="image/webp"
				media="(min-width: {{ Breakpoint.DESKTOP }}px)"
				srcset="{{ webpDesktop }}{{ webpDesktop2x ? ' 1x, ' ~ webpDesktop2x ~ ' 2x' }}"
			/>
		{% endif %}
		{% if webpTablet %}
			<source
				type="image/webp"
				media="(min-width: {{ webpDesktop ? Breakpoint.TABLET : Breakpoint.DESKTOP }}px)"
				srcset="{{ webpTablet }}{{ webpTablet2x ? ' 1x, ' ~ webpTablet2x ~ ' 2x' }}"
			/>
		{% endif %}
		{% if webpMobile %}
			<source
				type="image/webp"
				srcset="{{ webpMobile }}{{ webpMobile2x ? ' 1x, ' ~ webpMobile2x ~ ' 2x' }}"
			/>
		{% endif %}
	{% endif %}

	{% if desktop %}
		<source
			media="(min-width: {{ Breakpoint.DESKTOP }}px)"
			srcset="{{ desktop }}{{ desktop2x ? ' 1x, ' ~ desktop2x ~ ' 2x' }}"
		/>
	{% endif %}
	{% if tablet %}
		<source
			media="(min-width: {{ desktop ? Breakpoint.TABLET : Breakpoint.DESKTOP }}px)"
			srcset="{{ tablet }}{{ tablet2x ? ' 1x, ' ~ tablet2x ~ ' 2x' }}"
		/>
	{% endif %}

	<img
		class="Picture__image"
		src="{{ mobile }}"
		{{ mobile2x ? 'srcset="' ~ mobile2x ~ ' 2x"' }}
		{{ width ? 'width="' ~ width ~ '"' }}
		{{ height ? 'height="' ~ height ~ '"' }}
		{{ alt ? 'alt="' ~ alt|punctify ~ '"' : 'aria-hidden="true"' }}
		{{ not immediately ? 'loading="lazy"' }}
	/>
</picture>
